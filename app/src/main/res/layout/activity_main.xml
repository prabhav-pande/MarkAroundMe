<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/airplane"
    tools:context=".MainActivity">


    <ListView
        android:id="@+id/id_poilistview"
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:dividerHeight="3dp"
        android:divider="#000000"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </ListView>

    <Button
        android:id="@+id/id_imageC"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

    <Button
        android:id="@+id/id_mAMapbutton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border"
        android:fontFamily="@font/share_tech_mono"
        android:text="Visited"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_imageC"
        app:layout_constraintEnd_toStartOf="@+id/id_imageC"
        app:layout_constraintStart_toStartOf="@+id/id_poilistview"
        app:layout_constraintTop_toTopOf="@+id/id_imageC"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/id_WikiButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/border"
        android:fontFamily="@font/share_tech_mono"
        android:text="Wiki Page"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_imageC"
        app:layout_constraintEnd_toEndOf="@+id/id_poilistview"
        app:layout_constraintStart_toEndOf="@+id/id_imageC"
        app:layout_constraintTop_toTopOf="@+id/id_imageC"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>