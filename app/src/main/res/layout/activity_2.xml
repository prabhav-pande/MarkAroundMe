<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/id_twoLM"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/medievalsharp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/id_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_twoLM"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_twoLM"
        app:layout_constraintTop_toBottomOf="@+id/id_twoLM"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtWikiData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/contrail_one"
            android:text="Wikipedia information"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>