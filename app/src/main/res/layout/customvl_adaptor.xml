<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_vlName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:fontFamily="@font/share_tech_mono"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/id_Wikivl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wiki Data"
        android:textColor="#FFFFFF"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="@+id/id_vlName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_vlName"
        app:layout_constraintTop_toTopOf="@+id/id_vlName" />
</androidx.constraintlayout.widget.ConstraintLayout>